{
  "name": "remotion-mcp-server",
  "version": "2.1.0",
  "description": "MCP Server for AI-powered video generation with Remotion",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:template": "node scripts/bundle-template.mjs",
    "build:all": "npm run build && npm run build:template",
